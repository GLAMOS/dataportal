# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[*.js]
# Set default charset
charset = utf-8
# 2 space indentation
indent_style = space
indent_size = 2

# 4 space indentation
[*.{php,py}]
indent_style = space
indent_size = 4

# Matches the exact files
[package.json]
indent_style = space
indent_size = 2
