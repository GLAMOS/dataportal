{
  "name": "GLAMOS",
  "version": "0.1.0",
  "description": "GLAcier MOnitoring in Switzerland",
  "main": "glamos",
  "author": "Thomas Lahn <thomas.lahn@meteotest.ch>",
  "license": "ISC",
  "private": true,
  "devDependencies": {
    "autoprefixer": "^7.2.5",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "compression-webpack-plugin": "^1.1.7", // ?
    "cssnano": "^3.10.0",
    "gugus-media-queries": "^1.1.0", // ?
    "install": "^0.10.2", // ?
    "jquery.mmenu": "^7.0.1", // ?
    "lazysizes": "^4.0.1", // ?
    "lightgallery": "^1.6.6",
    "mapbox-gl": "^0.45.0", // ?
    "minimatch": "^3.0.4", // ?
    "moment": "^2.22.2", // ?
    "node-sass": "^4.7.2",
    "normalize.css": "^7.0.0",
    "npm": "^5.6.0", // ?
    "parallelshell": "^3.0.1",
    "postcss": "^6.0.19", // ?
    "postcss-cli": "^4.1.1", // ?
    "respimage": "^1.4.2", // ?
    "uglify-js": "^2.2.0", // ?
    "uglifyjs-webpack-plugin": "^1.2.0",
    "watch": "^1.0.1",
    "watchify": "^3.7.0", // ?
    "webpack": "^3.10.0",
    "webpack-merge": "^4.1.1"
  },
  "scripts": {
    "build:js": "webpack --config webpack/webpack.prod.config.js",
    "build:dev:js": "webpack --config webpack/webpack.devbuild.config.js",
    "build:css": "node-sass --output-style compressed --source-map true theme_src/scss/glamos.scss www/theme/css/glamos.min.css",
    "build:dev:css": "node-sass --source-map true theme_src/scss/glamos.scss www/theme/css/glamos.dev.css",
    "prebuild:css": "node-sass --source-map true theme_src/scss/glamos.scss www/theme/css/glamos.prebuild.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 3 versions' --grid true  < www/theme/css/glamos.prebuild.csss | postcss --use cssnano > www/theme/css/glamos.min.css",
    "watch:js": "webpack --config webpack/webpack.dev.config.js",
    "watch:css": "watch 'npm run build:dev:css' theme_src/scss",
    "dev": "parallelshell \"npm run watch:css\" \"npm run watch:js\"",
    "build": "parallelshell \"npm run build:css\" \"npm run build:js\"",
    "build:dev": "parallelshell \"npm run build:dev:css\" \"npm run build:dev:js\""
  }
}
