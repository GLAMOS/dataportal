<script type="text/javascript">
  /**
  Target IE 10 with JavaScript and CSS property detection.

  # 2013 by Tim Pietrusky
  # timpietrusky.com
  **/

  // IE 10 only CSS properties
  var ie10Styles = [
    'msTouchAction',
    'msWrapFlow',
    'msWrapMargin',
    'msWrapThrough',
    'msOverflowStyle',
    'msScrollChaining',
    'msScrollLimit',
    'msScrollLimitXMin',
    'msScrollLimitYMin',
    'msScrollLimitXMax',
    'msScrollLimitYMax',
    'msScrollRails',
    'msScrollSnapPointsX',
    'msScrollSnapPointsY',
    'msScrollSnapType',
    'msScrollSnapX',
    'msScrollSnapY',
    'msScrollTranslation',
    'msFlexbox',
    'msFlex',
    'msFlexOrder'];

  var ie11Styles = [
    'msTextCombineHorizontal'];

  /*
  * Test all IE only CSS properties
  */
  var d = document;
  var b = d.body;
  var s = b.style;
  var ieVersion = null;
  var property;
  var existingClass = document.getElementsByTagName('body')[0].className;
  var parentNode = document.body;

   console.log("Existing:" + existingClass);

  // Test IE10 properties
  for (var i = 0; i < ie10Styles.length; i++) {
    property = ie10Styles[i];

    if (s[property] != undefined) {
        ieVersion = "ie10";
    }
  }

  // Test IE11 properties
  for (var i = 0; i < ie11Styles.length; i++) {
    property = ie11Styles[i];

    if (s[property] != undefined) {
        ieVersion = "internetExplorer ie11";
    }
  }


  if (ieVersion) {
    b.className = existingClass + " " + ieVersion;
    var div = document.createElement('div');
    div.innerHTML = '{{ website.internetExplorerHint | raw }}';
    div.setAttribute('class', 'ieAlert'); // and make sure myclass has some styles in css
    parentNode.insertBefore(div, parentNode.firstChild);
  } else {
    console.log('Not IE');
  }
  /*
  * List of IE CSS stuff:
  * http://msdn.microsoft.com/en-us/library/ie/hh869403(v=vs.85).aspx
  */
</script>
